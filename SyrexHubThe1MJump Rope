local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local spinRemotes = ReplicatedStorage:WaitForChild("Spin_Remotes")
local SextoPremio = spinRemotes:WaitForChild("SextoPremio")
local QuintoPremio = spinRemotes:WaitForChild("QuintoPremio")

local function createButton(parent, text, color, position, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.8, 0, 0, 30)
    btn.Position = position
    btn.Text = text
    btn.BackgroundColor3 = color
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.TextSize = 16
    btn.Font = Enum.Font.SourceSans
    btn.Parent = parent
    btn.MouseButton1Click:Connect(callback)
    return btn
end
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "SpinGUI"
gui.ResetOnSpawn = false
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 200, 0, 130)
frame.Position = UDim2.new(0.5, -100, 0.5, -65)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 25)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
title.Text = "Syrex Hub Spin GUI"
title.TextColor3 = Color3.new(1, 1, 1)
title.TextSize = 16
title.Font = Enum.Font.SourceSans
createButton(frame, "Get Carpet", Color3.fromRGB(70, 130, 180), UDim2.new(0.1, 0, 0, 40), function()
    SextoPremio:FireServer()
end)

createButton(frame, "Get 100K", Color3.fromRGB(90, 180, 90), UDim2.new(0.1, 0, 0, 80), function()
    QuintoPremio:FireServer()
end)
